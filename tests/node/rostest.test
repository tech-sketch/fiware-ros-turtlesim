<launch>
  <node name="turtlesim_operator" pkg="turtlesim_operator" type="command_sender_node.py">
    <rosparam command="load" file="$(find turtlesim_operator)/config/test_params.yaml"/>
    <param name="mode" value="nodetest"/>
    <remap from="/ros/topics/turtlesim" to="nodetest_topic"/>
  </node>
  <test test-name="test_params" name="turtlesim_operator" pkg="turtlesim_operator" type="test_params.py"/>
  <test test-name="pubtest" type="publishtest" pkg="rostest">
    <rosparam>
      topics:
        - name: nodetest_topic
          timeout: 3
          negative: False
    </rosparam>
  </test>
</launch>
